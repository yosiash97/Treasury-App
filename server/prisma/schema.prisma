generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Order {
    id        Int      @id @default(autoincrement())
    amount    Decimal  @db.Decimal(20, 2) // was @db.Numeric(...)
    term      Int
    submitted_at DateTime
}